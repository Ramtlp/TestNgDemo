<!-- To pass different values to each test, place the <parameter> tag inside the <test> tag -->
<suite name="Suite2">
	<test name="Test2">
		<parameter name="autoMobile" value="Maruti"></parameter>
		<classes>
			<class name="tut6_parameterDemo.AutoMobile"></class>
		</classes>
	</test>

	<test name="Test3">
		<parameter name="softwareCompany" value="Microsoft"></parameter>
		<classes>
			<class name="tut6_parameterDemo.SoftwareCompany"></class>
		</classes>
	</test>
</suite>
